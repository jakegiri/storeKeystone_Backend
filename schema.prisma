datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Role {
  id              String   @id @default(cuid())
  name            String?
  canCRUDProducts Boolean?
  canQueryUsers   Boolean?
  canCRUDUsers    Boolean?
  canCRUDRoles    Boolean?
  canCRUDCart     Boolean?
  canCRUDOrders   Boolean?
  user            User[]   @relation("User_role")
}

model User {
  id         String    @id @default(cuid())
  email      String?   @unique
  password   String?
  name       String?
  address    Address?  @relation("Address_user")
  role       Role?     @relation("User_role", fields: [roleId], references: [id])
  roleId     String?   @map("role")
  createdAt  DateTime?
  modifiedAt DateTime?

  @@index([roleId])
}

model Address {
  id           String  @id @default(cuid())
  address      String?
  mobileNumber String?
  pincode      String?
  city         String?
  state        String?
  user         User?   @relation("Address_user", fields: [userId], references: [id])
  userId       String? @unique @map("user")
}